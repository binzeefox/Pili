<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_adding_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/cat1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_adding_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/adding_title_hint"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_adding_create_time"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#2000"
            android:gravity="start|center"
            android:paddingBottom="4dp"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:text="创建时间"
            android:textColor="@android:color/secondary_text_dark" />

        <me.gujun.android.taggroup.TagGroup
            android:id="@+id/tg_tag_field"
            style="@style/TagGroup.Large"
            android:layout_marginTop="8dp"
            app:atg_borderColor="@color/colorPrimary"
            app:atg_inputHint="@string/add_tag"
            app:atg_isAppendMode="true"
            app:atg_textColor="@color/colorPrimary" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edt_adding_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#2000"
                android:gravity="start"
                android:hint="请输入图片描述"
                android:minLines="16"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp" />
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>